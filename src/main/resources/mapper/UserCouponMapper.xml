<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.UserCouponMapper">

    <resultMap id="BaseResultMap" type="com.example.model.entity.UserCoupon">
        <id property="id" column="id" jdbcType="BIGINT"/>
        <result property="userId" column="user_id" jdbcType="BIGINT"/>
        <result property="couponId" column="coupon_id" jdbcType="BIGINT"/>
        <result property="status" column="status" jdbcType="TINYINT"/>
        <result property="orderId" column="order_id" jdbcType="BIGINT"/>
        <result property="getTime" column="get_time" jdbcType="TIMESTAMP"/>
        <result property="useTime" column="use_time" jdbcType="TIMESTAMP"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
    </resultMap>
    
    <!-- 用户优惠券与优惠券连接的结果映射 -->
    <resultMap id="UserCouponWithDetailMap" type="com.example.model.vo.UserCouponVO">
        <id property="id" column="id" jdbcType="BIGINT"/>
        <result property="userId" column="user_id" jdbcType="BIGINT"/>
        <result property="couponId" column="coupon_id" jdbcType="BIGINT"/>
        <result property="status" column="status" jdbcType="TINYINT"/>
        <result property="orderId" column="order_id" jdbcType="BIGINT"/>
        <result property="getTime" column="get_time" jdbcType="TIMESTAMP"/>
        <result property="useTime" column="use_time" jdbcType="TIMESTAMP"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
        <!-- 优惠券信息 -->
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="type" column="type" jdbcType="TINYINT"/>
        <result property="value" column="value" jdbcType="DECIMAL"/>
        <result property="minAmount" column="min_amount" jdbcType="DECIMAL"/>
        <result property="startTime" column="start_time" jdbcType="TIMESTAMP"/>
        <result property="endTime" column="end_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,user_id,coupon_id,
        status,order_id,get_time,
        use_time,create_time,update_time
    </sql>

    <!-- 根据用户ID查询优惠券 -->
    <select id="selectByUserId" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM user_coupon
        WHERE user_id = #{userId}
        ORDER BY create_time DESC
    </select>
    
    <!-- 根据用户ID和状态查询用户优惠券 -->
    <select id="selectByUserIdAndStatus" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM user_coupon
        WHERE user_id = #{userId} AND status = #{status}
        ORDER BY create_time DESC
    </select>
    
    <!-- 查询用户可用优惠券（未使用且未过期） -->
    <select id="selectAvailableCoupons" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM user_coupon
        WHERE user_id = #{userId}
          AND status = 0
        ORDER BY create_time DESC
    </select>
    
    <!-- 获取即将过期的优惠券 -->
    <select id="selectSoonExpiredCoupons" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM user_coupon
        WHERE user_id = #{userId}
          AND status = 0
        ORDER BY create_time DESC
    </select>
    
    <!-- 根据订单金额查询用户可用优惠券 -->
    <select id="selectCouponsByOrderAmount" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM user_coupon
        WHERE user_id = #{userId}
          AND status = 0
        ORDER BY create_time DESC
    </select>
    
    <!-- 更新优惠券使用状态 -->
    <update id="updateCouponStatus">
        UPDATE user_coupon
        SET status = #{status},
            order_id = #{orderId},
            use_time = #{useTime},
            update_time = NOW()
        WHERE id = #{id}
    </update>
    
    <!-- 批量添加用户优惠券 -->
    <insert id="batchInsertUserCoupons">
        INSERT INTO user_coupon (user_id, coupon_id, status, get_time, create_time, update_time)
        VALUES
        <foreach collection="couponIds" item="couponId" separator=",">
            (#{userId}, #{couponId}, #{status}, #{getTime}, NOW(), NOW())
        </foreach>
    </insert>
    
    <!-- 高级查询用户优惠券 -->
    <select id="selectUserCouponsByCondition" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM user_coupon
        <where>
            <if test="userId != null">
                AND user_id = #{userId}
            </if>
            <if test="status != null">
                AND status = #{status}
            </if>
            <if test="startTime != null">
                AND get_time &gt;= #{startTime}
            </if>
            <if test="endTime != null">
                AND get_time &lt;= #{endTime}
            </if>
        </where>
        ORDER BY create_time DESC
    </select>
</mapper>
