<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.ProductSpecMapper">

    <resultMap id="BaseResultMap" type="com.example.model.entity.ProductSpec">
        <id property="id" column="id" jdbcType="BIGINT"/>
        <result property="productId" column="product_id" jdbcType="BIGINT"/>
        <result property="specName" column="spec_name" jdbcType="VARCHAR"/>
        <result property="specValues" column="spec_values" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,product_id,spec_name,
        spec_values,create_time,update_time
    </sql>

    <!-- 根据商品ID查询规格 -->
    <select id="selectByProductId" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM product_spec
        WHERE product_id = #{productId}
    </select>

    <!-- 分页查询商品规格 -->
    <select id="selectPage" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM product_spec
        ORDER BY create_time DESC
    </select>

    <!-- 根据ID查询商品规格 -->
    <select id="selectById" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM product_spec
        WHERE id = #{id}
    </select>

    <!-- 插入新商品规格 -->
    <insert id="insertProductSpec" parameterType="com.example.model.entity.ProductSpec">
        INSERT INTO product_spec (product_id, spec_name, spec_values, create_time, update_time)
        VALUES (#{productId}, #{specName}, #{specValues}, NOW(), NOW())
    </insert>

    <!-- 更新商品规格信息 -->
    <update id="updateProductSpec" parameterType="com.example.model.entity.ProductSpec">
        UPDATE product_spec
        SET product_id  = #{productId},
            spec_name   = #{specName},
            spec_values = #{specValues},
            update_time = NOW()
        WHERE id = #{id}
    </update>

    <!-- 根据ID删除商品规格 -->
    <delete id="deleteProductSpec">
        DELETE
        FROM product_spec
        WHERE id = #{id}
    </delete>

    <!-- 批量插入商品规格 -->
    <insert id="batchInsertProductSpecs">
        INSERT INTO product_spec (product_id, spec_name, spec_values, create_time, update_time)
        VALUES
        <foreach collection="specList" item="spec" separator=",">
            (#{spec.productId}, #{spec.specName}, #{spec.specValues}, NOW(), NOW())
        </foreach>
    </insert>

    <!-- 批量删除商品规格 -->
    <delete id="batchDeleteProductSpecs">
        DELETE FROM product_spec
        WHERE id IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <!-- 根据规格值查询商品规格 -->
    <select id="selectBySpecValue" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM product_spec
        WHERE product_id = #{productId}
        AND spec_values LIKE CONCAT('%', #{specValue}, '%')
    </select>

    <!-- 查询被SKU引用的规格 -->
    <select id="selectUsedSpecIds" resultType="java.lang.Long">
        SELECT DISTINCT ps.id
        FROM product_spec ps
                 JOIN product_sku sku ON sku.product_id = ps.product_id
        WHERE ps.product_id = #{productId}
          AND sku.spec_values LIKE CONCAT('%', ps.spec_name, ':%')
    </select>

    <!-- 统计规格关联的SKU数量 -->
    <select id="countSkuBySpecId" resultType="java.lang.Integer">
        SELECT COUNT(*)
        FROM product_sku sku
                 JOIN product_spec ps ON sku.product_id = ps.product_id
        WHERE ps.id = #{specId}
          AND sku.spec_values LIKE CONCAT('%', ps.spec_name, ':%')
    </select>

    <!-- 查询商品的规格名列表 -->
    <select id="selectSpecNamesByProductId" resultType="java.lang.String">
        SELECT DISTINCT spec_name
        FROM product_spec
        WHERE product_id = #{productId}
    </select>
</mapper>
