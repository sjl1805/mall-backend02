<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.RecommendProductMapper">

    <resultMap id="BaseResultMap" type="com.example.model.entity.RecommendProduct">
        <id property="id" column="id" jdbcType="BIGINT"/>
        <result property="productId" column="product_id" jdbcType="BIGINT"/>
        <result property="type" column="type" jdbcType="TINYINT"/>
        <result property="sort" column="sort" jdbcType="INTEGER"/>
        <result property="status" column="status" jdbcType="TINYINT"/>
        <result property="startTime" column="start_time" jdbcType="TIMESTAMP"/>
        <result property="endTime" column="end_time" jdbcType="TIMESTAMP"/>
        <result property="algorithmVersion" column="algorithm_version" jdbcType="VARCHAR"/>
        <result property="recommendReason" column="recommend_reason" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,product_id,type,
        sort,status,start_time,
        end_time,algorithm_version,recommend_reason,
        create_time,update_time
    </sql>

    <!-- 根据商品ID查询推荐商品 -->
    <select id="selectByProductId" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM recommend_product
        WHERE product_id = #{productId}
    </select>

    <!-- 分页查询推荐商品 -->
    <select id="selectPage" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM recommend_product
        <where>
            <if test="ew != null and ew.sqlSegment != null and ew.sqlSegment != ''">
                ${ew.sqlSegment}
            </if>
        </where>
        ORDER BY sort , create_time DESC
    </select>

    <!-- 根据ID查询推荐商品 -->
    <select id="selectById" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM recommend_product
        WHERE id = #{id}
    </select>

    <!-- 插入新推荐商品 -->
    <insert id="insertRecommendProduct" parameterType="com.example.model.entity.RecommendProduct"
            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO recommend_product (product_id, type, sort, status,
                                       start_time, end_time, algorithm_version, recommend_reason)
        VALUES (#{productId}, #{type}, #{sort}, #{status},
                #{startTime}, #{endTime}, #{algorithmVersion}, #{recommendReason})
    </insert>

    <!-- 更新推荐商品信息 -->
    <update id="updateRecommendProduct" parameterType="com.example.model.entity.RecommendProduct">
        UPDATE recommend_product
        <set>
            <if test="productId != null">product_id = #{productId},</if>
            <if test="type != null">type = #{type},</if>
            <if test="sort != null">sort = #{sort},</if>
            <if test="status != null">status = #{status},</if>
            <if test="startTime != null">start_time = #{startTime},</if>
            <if test="endTime != null">end_time = #{endTime},</if>
            <if test="algorithmVersion != null">algorithm_version = #{algorithmVersion},</if>
            <if test="recommendReason != null">recommend_reason = #{recommendReason},</if>
            update_time = NOW()
        </set>
        WHERE id = #{id}
    </update>

    <!-- 根据ID删除推荐商品 -->
    <delete id="deleteRecommendProduct">
        DELETE
        FROM recommend_product
        WHERE id = #{id}
    </delete>

    <!-- 根据用户ID查询推荐商品 -->
    <select id="selectByUserId" resultMap="BaseResultMap">
        SELECT r.*
        FROM recommend_product r
                 JOIN product_favorite pf ON r.product_id = pf.product_id
        WHERE pf.user_id = #{userId}
          AND r.status = 1
          AND r.start_time &lt;= NOW()
          AND r.end_time &gt; NOW()
        ORDER BY r.sort
    </select>

    <!-- 查询当前有效地推荐商品 -->
    <select id="selectActiveRecommends" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM recommend_product
        WHERE status = 1
        AND start_time &lt;= NOW()
        AND end_time &gt; NOW()
        <if test="type != null">
            AND type = #{type}
        </if>
        ORDER BY sort
        <if test="limit != null">
            LIMIT #{limit}
        </if>
    </select>

    <!-- 按类型查询推荐商品 -->
    <select id="selectByType" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM recommend_product
        WHERE type = #{type}
        ORDER BY sort
    </select>

    <!-- 更新推荐商品状态 -->
    <update id="updateStatus">
        UPDATE recommend_product
        SET status      = #{status},
            update_time = NOW()
        WHERE id = #{id}
    </update>
</mapper>
