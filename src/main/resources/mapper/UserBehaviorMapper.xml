<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.UserBehaviorMapper">

    <resultMap id="BaseResultMap" type="com.example.model.entity.UserBehavior">
        <id property="id" column="id" jdbcType="BIGINT"/>
        <result property="userId" column="user_id" jdbcType="BIGINT"/>
        <result property="productId" column="product_id" jdbcType="BIGINT"/>
        <result property="behaviorType" column="behavior_type" jdbcType="TINYINT"/>
        <result property="behaviorTime" column="behavior_time" jdbcType="TIMESTAMP"/>
        <result property="duration" column="duration" jdbcType="INTEGER"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
        <result property="weight" column="weight" jdbcType="DECIMAL"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,user_id,product_id,
        behavior_type,behavior_time,duration,
        create_time,update_time,weight
    </sql>

    <!-- 根据用户ID查询行为记录 -->
    <select id="selectByUserId" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM user_behavior
        WHERE user_id = #{userId}
    </select>

    <!-- 分页查询用户行为 -->
    <select id="selectPage" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM user_behavior
        ORDER BY behavior_time DESC
    </select>

    <!-- 根据ID查询用户行为 -->
    <select id="selectById" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM user_behavior
        WHERE id = #{id}
    </select>

    <!-- 插入新用户行为 -->
    <insert id="insertUserBehavior" parameterType="com.example.model.entity.UserBehavior">
        INSERT INTO user_behavior (user_id, product_id, behavior_type, behavior_time, duration, create_time,
                                   update_time, weight)
        VALUES (#{userId}, #{productId}, #{behaviorType}, #{behaviorTime}, #{duration}, #{createTime}, #{updateTime},
                #{weight})
    </insert>

    <!-- 更新用户行为信息 -->
    <update id="updateUserBehavior" parameterType="com.example.model.entity.UserBehavior">
        UPDATE user_behavior
        SET user_id       = #{userId},
            product_id    = #{productId},
            behavior_type = #{behaviorType},
            behavior_time = #{behaviorTime},
            duration      = #{duration},
            update_time   = #{updateTime},
            weight        = #{weight}
        WHERE id = #{id}
    </update>

    <!-- 根据ID删除用户行为 -->
    <delete id="deleteUserBehavior">
        DELETE
        FROM user_behavior
        WHERE id = #{id}
    </delete>
</mapper>
